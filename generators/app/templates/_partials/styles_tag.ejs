<% if (separation) { -%>

    <% if (sass) { -%>
        <style src="./<%= filename %>.scss"></style>
    <% } else { -%>
        <style src="./<%= filename %>.css"></style>
    <% } -%>

<% } else { -%>

    <% if (sass) { -%>
        <style lang="scss">
            <%- include(paths.specs + `/sass/separation/${folder}/${filename}.scss`); -%>
        </style>
    <% } else { -%>
        <style>
            <%- include(paths.specs + `/css/separation/${folder}/${filename}.css`); -%>
        </style>
    <% } -%>

<% } -%>
