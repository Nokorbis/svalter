<% if (separation) { -%>

    <% if (typescript) { -%>
<script src="./<%= filename %>.ts"></script>
    <% } else { -%>
<script src="./<%= filename %>.js"></script>
    <% } -%>

<% } else { -%>

    <% if (typescript) { -%>
<script lang="ts">
    <%- include(paths.specs + `/typescript/separation/${folder}/${filename}.ts`); -%>
</script>
    <% } else { -%>
<script>
    <%- include(paths.specs + `/javascript/separation/${folder}/${filename}.js`); -%>
</script>
    <% } -%>

<% } -%>
